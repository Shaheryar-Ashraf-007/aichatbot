{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "ES2020",                      
    "module": "ESNext",                      
    "rootDir": "src",                        
    "outDir": "dist",                        
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false                          // ðŸ‘ˆ MAKE SURE THIS IS NOT true
  },
  "include": ["src"]
}
